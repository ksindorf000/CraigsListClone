
@{
    ViewBag.Title = "CategorySort";
}

<h3 style="text-align:center">@ViewBag.Cat</h3>
<p style="text-align:center">
    @Html.ActionLink("Newest", "CategorySort", "Home", new { sortby = "new" }, null) || 
    @Html.ActionLink("Highest Price", "CategorySort", "Home", new { sortby = "high" }, null) || 
    @Html.ActionLink("Lowest Price", "CategorySort", "Home", new { sortby = "low" }, null)
</p>
<hr />
<div class="row">
    <div class="col-lg-12">
        @foreach (var p in ViewBag.Posts)
        {
            <div class="row">
                <div class="col-md-12">
                    <strong><a href="/p/@p.Id">@p.Title</a> - @p.Created</strong>
                    <p>
                        @p.Desc
                    </p>
                    <p>
                        $@p.Cost
                    </p>
                    <p>
                        @p.Owner.UserName, @p.CityName
                    </p>
                </div>
            </div>
            <hr />
        }
    </div>
</div>
