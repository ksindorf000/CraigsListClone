
@{
    ViewBag.Title = "CategorySort";
}

<h3 style="text-align:center">@ViewBag.Cat</h3>
<hr />
<div class="row">
    <div class="col-lg-12">
        <hr />
        @foreach (var p in ViewBag.Posts)
        {
            <div class="row">
                <div class="col-md-12">
                    <strong><a href="/p/@p.Id">@p.Title</a> - @p.CatName</strong>
                    <p>
                        @p.Desc
                    </p>
                    <p>
                        $@p.Cost
                    </p>
                    <p>
                        @p.Owner.UserName, @p.CityName
                    </p>
                </div>
            </div>
            <hr />
        }
    </div>
</div>
