@model CraigsListClone.Models.PostViewModel

@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 class="header-h">Edit </h1>
            <h3>@Model.Title</h3>
            <span class="marb-35">&nbsp;</span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            @using (Html.BeginForm())
            {

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <!--TITLE-->
                    @Html.LabelFor(model => model.Title)<br />
                    <div class="form-group">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <!--DESC-->
                    @Html.LabelFor(model => model.Desc)<br />
                    <div class="form-group">
                        @Html.TextAreaFor(model => model.Desc, new { Class = "form-control ans-textarea", Rows = "4" })
                        @Html.ValidationMessageFor(model => model.Desc, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <!--COST-->
                    @Html.LabelFor(model => model.Cost)<br />
                    <div class="form-group">
                        @Html.EditorFor(model => model.Cost, new { Class = "form-control ans-textarea", Rows = "4" })
                        @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <!--CITY-->
                    @Html.LabelFor(m => m.CityId)
                    <div class="form-group">
                        @Html.DropDownList("CityId", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <!--CITY-->
                    @Html.LabelFor(m => m.CatName)
                    <div class="form-group">
                        @Html.DropDownList("CatId", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="row marb-35">
                    <div class="btnpad">
                        <!--SUBMIT-->
                        <div class="contacts-btn-pad">
                            <input type="submit" value="Save" class="btn contacts-btn" />
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
