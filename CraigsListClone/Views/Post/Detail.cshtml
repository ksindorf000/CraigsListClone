@model CraigsListClone.Models.PostViewModel

@{
    ViewBag.Title = "Detail";
}

<div class="container">

    <!-----------HEADER------------->
    <div class="col-md-12 text-center marb-35">
        <h1 class="header-h">
            @Model.Title

            @if (ViewBag.CanEdit)
            {
                <a href="@Url.Action("Edit", "Post", new { id = Model.Id })" class="btn btn-warning"><span class="glyphicon glyphicon-pencil"></span></a>
                <a href="@Url.Action("Delete", "Post", new { id = Model.Id })" class="btn btn-danger"><span class="glyphicon glyphicon-ban-circle"></span></a>

            }
        </h1>
        <div class="header-p">

            <p>
                Posted by:
                <a href="/u/@Model.Owner.UserName">@Model.Owner.UserName</a>
                on 
                @Model.Created.ToString()
            </p>

            <p>
                Category: @Model.CatName
            </p>

        </div>
        <hr />
    </div>

    <!------Post----->
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div>
                @Model.Desc
                <ul>
                    @foreach (var u in ViewBag.UploadsList)
                    {
                        <li><img src="@u.FilePath" /></li>
                    }
                </ul>
                <span class="marb-35">
                    @if (ViewBag.CanEdit)
                    {
                        @Html.Partial("_Upload")
                    }
                </span>
            </div>
        </div>
    </div>
